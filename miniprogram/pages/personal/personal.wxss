page {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.userinfo-wrapper {
  display: flex;
  flex: 2;
  flex-direction: column;
  align-content: center;
  width: 100%;
  text-align: center;
  justify-content: center;
  background-color: rgb(16,174,255);
}

/* ================= */
.userinfo-avatar {
  display: flex;
  width: 128rpx;
  height: 128rpx;
  margin: 0 auto;
  border-radius: 50%;
}

.userinfo-nickname {
  display: flex;
  margin-top: 30rpx;
  justify-content: center;
  color: #fff;
}

.usermotto {
  margin-top: 130px;
}


/* ============ */
.my-items {
  flex: 3;
  width: 96%;
  padding: 20rpx;
  flex-direction: column;
}

.item-wrapper {
  width: 95%;
  height: 60rpx;
  padding: 20rpx 20rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
  justify-content: space-between;
}
.item-wrapper i {
  vertical-align: middle;
  margin-right: 26rpx;
}